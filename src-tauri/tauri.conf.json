{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dewai",
  "version": "0.1.0",
  "identifier": "com.dewai.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "dewai",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "context": "local",
          "windows": ["main"],
          "permissions": [
            "sql:allow-load",
            "sql:allow-execute",
            "sql:allow-select",
            "sql:allow-close"
          ]
        }
      ]
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:data.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
